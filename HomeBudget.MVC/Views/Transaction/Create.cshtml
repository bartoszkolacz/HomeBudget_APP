@using HomeBudget.Application.Transaction.Commands.CreateTransaction

@model CreateTransactionCommand
<h1>Dodaj transakcje </h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/Transaction/Create" method="post">
           <div class="form-group mb3">
                <label class="control-label" asp-for="transactionName"> Tytuł </label>
                    <input class="form-control" type="text" asp-for="transactionName" >
                    <span asp-validation-for="transactionName" class="text-danger"> </span>
            </div>

            <div class="form-group mb3">
                <label class="control-label" asp-for="transactionDescription"> Opis </label>
                <input class="form-control" type="text" asp-for="transactionDescription">
                <span asp-validation-for="transactionDescription" class="text-danger"> </span>
            </div>

            <div class="form-group mb3">
                <label class="control-label" asp-for="transactionAmount"> Kwota </label>
                <input class="form-control" type="number" asp-for="transactionAmount">
                <span asp-validation-for="transactionAmount" class="text-danger"> </span>
            </div>

            <div class="form-group mb4">
                <label class="control-label" asp-for="transactionCategory"> Rodzaj </label>
                <input class="form-control" type="text" asp-for="transactionCategory">
                <span asp-validation-for="transactionCategory" class="text-danger"> </span>
            </div>
            
            <div class="form-group mb3">
                <input type="submit" value="Dodaj" class="btn btn-primary" >
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

