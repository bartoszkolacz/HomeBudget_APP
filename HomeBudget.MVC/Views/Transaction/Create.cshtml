<h1>Dodaj transakcje :) </h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/Transaction/Create" method="post">
           <div class="form-group mb3">
                <label class="control-label" for="Name"> Tytuł </label>
                    <input class="form-control" type="text" id="Name" name="transactionName" >
            </div>

            <div class="form-group mb3">
                <label class="control-label" for="Descirption"> Opis </label>
                    <input class="form-control" type="text" id="Descirption" name="transactionDescription" >
            </div>

            <div class="form-group mb3">
                <label class="control-label" for="Amount"> Kwota </label>
                    <input class="form-control" type="number" id="Amount" name="transactionAmount" >
            </div>

            <div class="form-group mb3">
                <label class="control-label" for="Category"> Rodzaj </label>
                    <input class="form-control" type="text" id="Category" name="transactionCategory" >
            </div>
            <div class="form-group mb3">
                <input type="submit" value="Dodaj" class="btn btn-primary" >
            </div>
        </form>
    </div>
</div>

